{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/apps/**/*",
      "**/packages/**/*",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/coverage",
      "!**/bun.lock",
      "!**/*.config.{js,mjs,cjs,ts}",
      "!**/tsconfig.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noDebugger": "error",
        "noConsole": { "level": "warn", "options": { "allow": ["log"] } }
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error",
        "useImportType": "off"
      },
      "complexity": {
        "noUselessFragments": "error",
        "useFlatMap": "error",
        "useOptionalChain": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["**/apps/api/**/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": { "level": "off", "options": { "allow": ["log"] } }
          }
        }
      }
    },
    {
      "includes": ["**/*.config.{js,ts,mjs}", "**/next.config.ts", "**/nest-cli.json"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off"
          }
        }
      }
    }
  ]
}
